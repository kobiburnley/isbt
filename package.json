{
  "name": "isbt-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "isbt start",
    "build": "isbt build",
    "lint": "yarn workspaces foreach -A run isbt lint . --passWithNoTests",
    "test": "yarn workspaces foreach -A run jest  --passWithNoTests",
    "canary": "yarn release --canary",
    "release": "lerna publish --no-push --no-git-tag-version --exact --conventional-commits --yes",
    "bump": "lerna version --no-push --exact --conventional-commits",
    "version": "yarn install && git add yarn.lock"
  },
  "devDependencies": {
    "@isbt/core": "rc"
  },
  "resolutions": {
    "esbuild": ">=0.15.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "version": "0.0.0",
  "packageManager": "yarn@3.6.1"
}
