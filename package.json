{
  "name": "isbt-monorepo",
  "private": true,
  "workspaces": [
    "packages/ts",
    "packages/workspaces-meta",
    "packages/isbt"
  ],
  "files": [
    "lerna.json"
  ],
  "scripts": {
    "build": "isbt",
    "bump": "lerna version --exact --conventional-commits --no-push",
    "publish": "lerna exec 'npm publish --registry https://registry.npmjs.org'"
  },
  "devDependencies": {
    "@lerna/cli": "^4.0.0",
    "@lerna/exec": "^4.0.0",
    "husky": "^4.0.0",
    "isbt": "1.4.6",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.0",
    "ts-node": "^10.0.0"
  },
  "resolutions": {
    "@types/node": "^14.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "version": "0.0.0"
}
