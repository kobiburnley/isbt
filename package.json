{
  "name": "isbt-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "lerna.json"
  ],
  "scripts": {
    "build": "isbt",
    "bump": "lerna version --exact --conventional-commits --no-push",
    "publish": "lerna exec 'npm publish --registry https://registry.npmjs.org'"
  },
  "devDependencies": {
    "isbt": "1.4.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "version": "0.0.0"
}
