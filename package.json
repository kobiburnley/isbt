{
  "name": "isbt",
  "private": true,
  "workspaces": [
    "packages/ts",
    "packages/workspaces-meta",
    "packages/isbt"
  ],
  "scripts": {
    "build": "node node_modules/isbt/dist/cjs/index.js",
    "bump": "lerna version --conventional-commits --no-push",
    "publish": "yarn workspaces run publish"
  },
  "devDependencies": {
    "husky": "^4.0.0",
    "isbt": "1.3.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.0",
    "ts-node": "^10.0.0"
  },
  "resolutions": {
    "@types/node": "^14.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "version": "0.0.0"
}
